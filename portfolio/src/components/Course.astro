---
const {
  course: { name, date, institution },
} = Astro.props;
---

<div
  class="flex flex-col justify-center bg-white px-4 max-w-[650px] rounded-lg"
>
  <div class="border-l-2 border-dashed">
    <div class="relative">
      <div class="bg-black absolute -top-0.5 z-10 -ml-3.5 h-7 w-7 rounded-full">
      </div>
      <div class="pl-5">
        <h4 class="font-bold text-blue-500">{name}</h4>
        <p class="mt-2 text-sm text-gray-500">
          {institution}
        </p>
        <span class="pt-2 pb-4 block text-sm font-semibold text-blue-500"
          >{date}</span
        >
      </div>
    </div>
  </div>
</div>
