---
const {
  course: { name, date, institution },
} = Astro.props;
---

<div
  class="flex flex-col justify-center bg-white px-4 max-w-[650px] rounded-lg"
>
  <div class="border-l-4 border-double border-black">
    <div class="relative">
      <div
        class="shadow-lg bg-black h-4 w-4 absolute left-[-10px] top-[4px] rounded-full"
      >
      </div>
      <div class="pl-5">
        <h4 class="font-bold text-blue-500">{name}</h4>
        <p class="mt-2 text-sm text-gray-500">
          {institution}
        </p>
        <span class="pt-2 pb-4 block text-sm font-semibold text-blue-500"
          >{date}</span
        >
      </div>
    </div>
  </div>
</div>
